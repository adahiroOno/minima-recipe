<div class="contents row">
  <p><%= @nickname %>さんの投稿一覧</p>
  <% @recipes.each do |recipe| %>
    <div class="content_post" style="background-image">
      <%= image_tag recipe.image.variant(resize: '500x500') if recipe.image.attached? %>
      <p><%= recipe.cooking_name %></p>
      <span class="name">投稿日時：<%= recipe.created_at %></span>
      <span class="name"><%= recipe.updated_at %></span>
    </div>
  <% end %>
</div>