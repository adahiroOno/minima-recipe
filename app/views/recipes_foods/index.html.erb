<h1>Recipes Foods</h1>

<table>
  <thead>
    <tr>
      <th>Recipe</th>
      <th>Food</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes_foods.each do |recipes_food| %>
      <tr>
        <td><%= recipes_food.recipe_id %></td>
        <td><%= recipes_food.food_id %></td>
        <td><%= link_to 'Show', recipes_food %></td>
        <td><%= link_to 'Edit', edit_recipes_food_path(recipes_food) %></td>
        <td><%= link_to 'Destroy', recipes_food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

