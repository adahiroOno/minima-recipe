  <!-- Page Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <div class="border rounded-lg px-2 my-3 shadow" style="background-color: rgba(255, 255, 255, 0.8)">
          <h2 class="my-2 text-center">材料検索</h2>
          <%= search_form_for @search, url: recipes_path do |f| %>
            <%# 麺類 %>
            <div class="progress mt-3">
              <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">麺類</div>
            </div>
            <% @foods.each do |food| %>
              <% if food.category == "麺類" %>
                <div class="form-check form-check-inline">
                  <%= check_box_tag :'q[recipes_foods_food_names_in][]', food.name, false, id:"food_#{food.id}", class:'form-check-input' %>
                  <%= label_tag "food_#{food.id}", food.name, class:'form-check-label' %>
                </div>
              <% end%>
            <% end %>

            <%# 野菜 %>
            <div class="progress mt-3">
              <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">野菜</div>
            </div>
            <% @foods.each do |food| %>
              <% if food.category == "野菜" %>
                <div class="form-check form-check-inline">
                  <%= check_box_tag :'q[recipes_foods_food_name_in][]', food.name, false, id:"food_#{food.id}", class:'form-check-input' %>
                  <%= label_tag "food_#{food.id}", food.name, class:'form-check-label' %>
                </div>
              <% end%>
            <% end %>

            <%# 水産物 %>
            <div class="progress mt-3">
              <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">水産物</div>
            </div>
            <% @foods.each do |food| %>
              <% if food.category == "水産物" %>
                <div class="form-check form-check-inline">
                  <%= check_box_tag :'q[recipes_foods_food_name_in][]', food.name, false, id:"food_#{food.id}", class:'form-check-input' %>
                  <%= label_tag "food_#{food.id}", food.name, class:'form-check-label' %>
                </div>
              <% end%>
            <% end %>

            <%# 肉 %>
            <div class="progress mt-3">
              <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">肉</div>
            </div>
            <% @foods.each do |food| %>
              <% if food.category == "肉" %>
                <div class="form-check form-check-inline">
                  <%= check_box_tag :'q[recipes_foods_food_name_in][]', food.name, false, id:"food_#{food.id}", class:'form-check-input' %>
                  <%= label_tag "food_#{food.id}", food.name, class:'form-check-label' %>
                </div>
              <% end%>
            <% end %>

            <%# 卵・チーズ・乳製品肉 %>
            <div class="progress mt-3">
              <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">卵・チーズ・乳製品</div>
            </div>
            <% @foods.each do |food| %>
              <% if food.category == "卵・チーズ・乳製品" %>
                <div class="form-check form-check-inline">
                  <%= check_box_tag :'q[recipes_foods_food_name_in][]', food.name, false, id:"food_#{food.id}", class:'form-check-input' %>
                  <%= label_tag "food_#{food.id}", food.name, class:'form-check-label' %>
                </div>
              <% end%>
            <% end %>

            <%# 豆腐・納豆・漬物 %>
            <div class="progress mt-3">
              <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">豆腐・納豆・漬物</div>
            </div>
            <% @foods.each do |food| %>
              <% if food.category == "豆腐・納豆・漬物" %>
                <div class="form-check form-check-inline">
                  <%= check_box_tag :'q[recipes_foods_food_name_in][]', food.name, false, id:"food_#{food.id}", class:'form-check-input' %>
                  <%= label_tag "food_#{food.id}", food.name, class:'form-check-label' %>
                </div>
              <% end%>
            <% end %>
            
            <%# 果物 %>
            <div class="progress mt-3">
              <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">果物</div>
            </div>
            <% @foods.each do |food| %>
              <% if food.category == "果物" %>
                <div class="form-check form-check-inline">
                  <%= check_box_tag :'q[recipes_foods_food_name_in][]', food.name, false, id:"food_#{food.id}", class:'form-check-input' %>
                  <%= label_tag "food_#{food.id}", food.name, class:'form-check-label' %>
                </div>
              <% end%>
            <% end %>

            <br>
            <%= f.submit "検索", class:"btn btn-info btn-block my-3" %>
          <% end %>
        </div>
      </div>
      <!-- /.col-lg-3 -->

      <div class="col-lg-9">
        <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
              <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

        <div class="row">
          <% @recipes.each do |recipe| %>
            <div class="col-lg-4 col-md-6 mb-4 ">
              <div class="card h-100">
                <%= link_to recipe_path(recipe.id) do %>
                  <%= image_tag recipe.image, class:"card-img-top embed-responsive embed-responsive-16by9" %>
                <% end %>
                <div class="card-body">
                  <h4 class="card-title">
                    <%= link_to recipe.cooking_name, recipe_path(recipe.id) %>
                  </h4>
                  <h6 class="card-subtitle mb-2 text-muted">
                    <%= recipe.genre.name %>
                  </h6>
                  <div class="card-text">
                    <div class="badge badge-danger">
                      材料
                    </div>
                      <% recipe.foods.ids.each do |i| %>
                        <% @food = Food.find(i) %>
                        <small class="text-muted"><%= @food.name%></small>
                      <% end %>
                  </div>
                </div>
                <div class="card-footer">                  
                  <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;  4.12(134件)</small>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- /.row -->
      </div>
      <!-- /.col-lg-9 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container -->
